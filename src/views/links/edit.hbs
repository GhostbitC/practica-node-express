<div class="conteiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group">
                            <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        <br>
                        <div class="form-group">
                            <input class="form-control" type="url" value="{{link.url}}" name="url" placeholder="URL">
                        </div>
                        <br>
                        <div class="form-group">
                            <textarea class="form-control" name="description" rows="2" placeholder="Description">{{link.description}}</textarea>
                        </div>
                        <br>
                        <div class="d-grid gap-2">
                            <button class="btn btn-dark btn-block">
                                    Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>