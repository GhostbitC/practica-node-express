<div class="conteiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        <br>
                        <div class="form-group">
                            <input class="form-control" type="url" name="url" placeholder="URL">
                        </div>
                        <br>
                        <div class="form-group">
                            <textarea class="form-control" name="description" rows="2" placeholder="Description"></textarea>
                        </div>
                        <br>
                        <h3>Sube tu imagen</h3>
                        <br>
                        <div class="form-group" >
                            <input type="file" name="image" class="input-file">
                        </div>
                        <br>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-block">
                                    Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>