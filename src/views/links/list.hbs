<div class="container p-4">
    <div class="row">

        {{#each links}}
            <div class="col-md-3">
                <div class="card" id="card-1">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase"><font face="nunito">
                            {{title}}
                             </font>
                        </h3>
                         <img src="/uploads/{{image_name}}" alt="imagen" class="card-img-top mx-auto m-2">
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
                </div>
            </div>
        
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>¡No hay links almacenados aun!</p>
                    <a href="/links/add">¡Crea uno!</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>